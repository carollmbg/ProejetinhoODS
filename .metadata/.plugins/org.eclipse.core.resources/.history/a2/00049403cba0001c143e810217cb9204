package EstadoSanitário;

import java.util.Scanner;

public class Perguntas {
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	

	
	Scanner leia = new Scanner(System.in);
	
	
	String nome;
	String cpf;
	String cidade;
	int n_moradores;
	String problema_agua;
	String cheiro;
	String alaga;
	int lixo;
	String rua;
	String coleta;
	String esgoto;
	
	
	
	//Perguntas
	
	System.out.println("\nQual é o seu nome? ");
	nome = leia.nextLine(); 
	
/* Informações para compor futuro banco de dados
	 
	System.out.println("\nQual é o seu CPF? ");
	cpf = leia.nextLine(); 
	
	System.out.println("\nQual é a sua cidade? ");
	cidade = leia.nextLine(); 
	
*/
	
	
	//Perguntas
	
	System.out.println("\n1. Quantas pessoas moram na casa?  ");
	n_moradores = leia.nextInt();
	
	System.out.println("\n2. Você costuma ter problemas com a água que utiliza em casa? ");
	problema_agua = leia.nextLine();
	
	System.out.println("\n3. Para onde vai o esgoto de sua casa?");
		esgoto = leia.nextLine();
	System.out.println("\n1. Encanado para o rio");
	System.out.println("\n2. Fossa séptica");
	System.out.println("\n3. Encanado para estação de tratamento de esgoto");
	System.out.println("\n4. Fossa negra");
	System.out.println("\n4. corre a céu aberto");
	
	
			
	System.out.println("\n4.  Na sua rua sente cheiro de esgoto?");
		cheiro = leia.nextLine();
	
	System.out.println("\n5. Quando chove, sua rua fica alagada?");
		alaga = leia.nextLine();
		
	System.out.println("\n6. Na sua rua, você vê lixo nas grades de drenagem ou bocas-de-lobo, após as chuvas?");
		rua = leia.nextLine();	
		
	System.out.println("\n7. O que é feito com o lixo produzido em sua casa?");
		lixo = leia.nextInt();	
		System.out.println("\n1. Coletado");
		System.out.println("\n2. Queimado");
		System.out.println("\n3. Enterrado");
		System.out.println("\n4. Jogado");
		System.out.println("\n4. Levado para caçamba");
		
		
	System.out.println("\n8. A coleta de lixo ocorre de forma regular em sua rua?");
		coleta = leia.nextLine();		
		
	}
}
